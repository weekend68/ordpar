{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "../",
    "types": ["node"]
  },
  "include": ["src/**/*", "../api/_lib/**/*"],
  "exclude": ["node_modules", "dist", "../node_modules", "../src", "../scripts"]
}
